{{!< default}}

<style>
a:link {
  color: whitesmoke;
  background-color: transparent;
  text-decoration: none;
}

a:visited {
  color: grey;
  background-color: transparent;
  text-decoration: none;
}

a:hover {
  color: red;
  background-color: transparent;
  text-decoration: underline;
}

a:active {
  color: yellow;
  background-color: transparent;
  text-decoration: underline;
}
</style>

{{!-- Everything inside the #post tags pulls data from the post --}}
{{#post}}
<div class="{{post_class}}">
  <div class="post-header contact-header
              {{#if feature_image}}post-hero{{else}}post-without-image{{/if}}">
    {{!-- Post image --}}
    {{#if feature_image}}
      <div class="full-page-cover lazyload blur" data-src="{{img_url feature_image}}"
           style="background-image: url({{img_url feature_image}})">
      </div>
    {{/if}}
    <div class="container">
      <div class="post-header__info">
        <h2 class="post-header__title animated fadeInDown">{{title}}</h2>
      </div>

      <div class="contact">
        <div class="row">
          {{!-- Blog contact info --}}
          <div class="col-sm-6 col-xs-12 contact-address animated fadeInLeft">
            <h3 class="contact-address__title">{{@site.title}}</h3>
              <p> 3715 Latrobe Dr, Unit 630<br>
                  Charlotte<br>
                  North Carolina<br>
                  28211<br>
              </p>
              <p><strong>Tel: </strong><a href="tel:7045216166">704-521-6166</a></p>
              <p><strong>Email: </strong><a href="mailto:info@unisal.org">info@unisal.org</a></p>
            {{>social-media}}
          </div>

          {{!-- Blog contact form --}}
          <div class="col-sm-6 col-xs-12 contact__form-wrapper animated fadeInRight">
            <form action="https://formspree.io/f/moqpevrr" id="contact-form"
                  class="contact-form clearfix" method="post">
                <h3 class="contact-form__title">{{t "Message"}}</h3>
                <input type="text" name="username" id="username"
                       class="contact-form__name placeholder-light"
                       title="Name" placeholder="Name" required>
                <input type="text" name="email" id="email" title="Email"
                       class="contact-form__email placeholder-light"
                       placeholder="Email" required>
                <textarea rows="5" name="message" id="message" title="Message"
                          class="placeholder-light" placeholder="Message" required>
                </textarea>
                <input type="text" name="_gotcha" style="display:none">
                <input class="button button--light" type="submit" name="submit"
                       id="submit" value="Submit">
            </form>
          </div>

        </div>
      </div>
    </div>
  </div>
</div>

{{/post}}

